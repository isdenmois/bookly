{
  "compilerOptions": {
      "module":"es2015",
      "target": "es2015",
      "jsx": "react",
      "rootDir": "src",
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "skipLibCheck": true,
      "moduleResolution":"Node",
      "baseUrl": "./src"
  },
  "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  "exclude":[
      "build",
      "node_modules",
      "jest.config.js",
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "App.js",
      "test/**.js"
  ],
  "compileOnSave": false
}
